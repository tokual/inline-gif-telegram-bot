# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Query Processing Configuration - Conservative settings for Raspberry Pi
DEBOUNCE_DELAY=1.0
PROCESSING_TIMEOUT=15.0

# GIF Generation Configuration - Smaller size and fewer frames for Pi
GIF_WIDTH=400
GIF_HEIGHT=400
GIF_FRAMES=15
GIF_DURATION=200
GIF_QUALITY=100

# Font Configuration - Smaller fonts for better performance
MAIN_FONT_SIZE=28
LANG_FONT_SIZE=14
TEXT_WRAP_WIDTH=25

# Animation Configuration - Reduced color intensity for better rendering
HUE_SATURATION=70
HUE_VALUE=85

# Upload Configuration - Longer timeout for slower Pi network
UPLOAD_TIMEOUT=60

# Logging Configuration - Reduce verbosity on Pi
LOG_LEVEL=WARNING
